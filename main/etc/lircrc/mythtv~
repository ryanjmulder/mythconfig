# ~/.mythtv/lircrc
# 
# MythTV native LIRC config file for
# the ATI-Wonder Remote
# using lirc_ati_remote_wonder_rf driver
# 

# all remote buttons wakeup display
begin
   prog = irexec
   button = *
   config = /home/rmulder/kick_dpms &
end

# kill mythtv
begin
remote = ati_remote_wonder_rf
prog = irexec
button = a
button = a
config = /home/rmulder/kill_progs
end

# start mythtv
begin
remote = ati_remote_wonder_rf
prog = irexec
button = b
button = b
config = /home/rmulder/start_mythfrontend &
end

begin
remote = ati_remote_wonder_rf
prog = irexec
button = stop
config = /home/rmulder/kill_helpers &
repeat = 0
end

begin
remote = ati_remote_wonder_rf
prog = mythtv
button = c
config = /
end

# incremental search
begin
remote = ati_remote_wonder_rf
prog = mythtv
button = shrink_resize
config = Ctrl+S
repeat = 0
end

begin
remote = ati_remote_wonder_rf
prog = mythtv
button = check
config = I
repeat = 0
end

begin
remote = ati_remote_wonder_rf
prog = mythtv
button = menu
config = M
repeat = 0
end

begin
remote = ati_remote_wonder_rf
prog = mythtv
button = stop
config = Esc
repeat = 0
end

# next commercial break
begin
remote = ati_remote_wonder_rf
prog = mythtv
button = fforward
config = End
repeat = 0
end

# previous commercial break
begin
remote = ati_remote_wonder_rf
prog = mythtv
button = rewind
config = Home
repeat = 0
end

begin
remote = ati_remote_wonder_rf
prog = mythtv
button = pause
config = P
repeat = 0
end

begin
remote = ati_remote_wonder_rf
prog = mythtv
button = play
config = P
repeat = 0
end

