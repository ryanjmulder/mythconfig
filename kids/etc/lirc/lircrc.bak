# ~/.mythtv/lircrc
# 
# MythTV native LIRC config file for
# the ATI-Wonder Remote
# using lirc_atiusb driver
# 

# all remote buttons wakeup display
begin
   prog = irexec
   button = *
   config = DISPLAY=:0 xset dpms force on &
end

# kill mythtv
begin
prog = irexec
button = KEY_A
button = KEY_A
config = /home/rmulder/kill_progs
end

#jump to tv
begin
prog = mythtv
button = timer_no_jumping_necessary
config = F6
repeat = 0
end

#jump to dvd
begin
remote = devinput
prog = mythtv
button = dvd_using_dvdplayer_upstairs
config = F7
repeat = 0
end

# start mythtv
begin
remote = devinput
prog = irexec
button = KEY_B
button = KEY_B
config = /home/rmulder/start_mythfrontend &
end


#tv power
begin
remote = devinput
prog = irexec
button = KEY_POWER
config = irsend --device=/var/run/lirc/lircd1 set_transmitters 3 && irsend --device=/var/run/lirc/lircd1 --count 2 SEND_ONCE haier KEY_POWER
repeat = 0
end

#tv volume up
begin
remote = devinput
prog = irexec
button = KEY_VOLUMEUP
config = irsend --device=/var/run/lirc/lircd1 set_transmitters 3 && irsend --device=/var/run/lirc/lircd1 SEND_ONCE haier KEY_VOLUMEUP
repeat = 2
end

#tv volume down
begin
remote = devinput
prog = irexec
button = KEY_VOLUMEDOWN
config = irsend --device=/var/run/lirc/lircd1 set_transmitters 3 && irsend --device=/var/run/lirc/lircd1 SEND_ONCE haier KEY_VOLUMEDOWN
repeat = 2
end

#tv mute
begin
remote = devinput
prog = irexec
button = KEY_MUTE
config = irsend --device=/var/run/lirc/lircd1 set_transmitters 3 && irsend --device=/var/run/lirc/lircd1 SEND_ONCE haier KEY_MUTE
repeat = 0
end

